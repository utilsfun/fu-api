{
  "$result": {
    "@func": "@switch",
    "select": "@data('parameters._mode');",
    "info": {
      "@func": "apijson",
      "datasource": "default",
      "method": "put",
      "request": {
        "@": "@data('body');",
        "API_APPLICATION": {
          "id": "@",
          "title": "@",
          "note": "@",
          "owner": "@",
          "version": "@",
          "status": "@"
        }
      }
    },
    "config": {
      "@func": "apijson",
      "datasource": "default",
      "method": "put",
      "request": {
        "@": "@data('body');",
        "API_APPLICATION": {
          "id": "@",
          "config": "@"
        }
      }
    },
    "error": {
      "@func": "apijson",
      "datasource": "default",
      "method": "put",
      "request": {
        "@": "@data('body');",
        "API_APPLICATION": {
          "id": "@",
          "error_codes": "@{cast(data.error_codes,'String')}"
        }
      }
    }
  },

  "*": {
    "@": "@{$result}",
    "msg": "@",
    "status": "@{ data.code==200 ? 0 : data.code }"
  }
}