{
  "type": "wrapper",
  "size": "none",
  "body": [
    {
      "type": "crud",
      "syncLocation": false,
      "columnsTogglable": false,
      "api": "./document.api?_type=application",
      "loadDataOnce": true,
      "draggable": true,
      "saveOrderApi": {
        "url": "./document.api?_type=application&_act=sort",
        "data": {
          "ids": "${ids}"
        }
      },
      "name": "application_documents",
      "itemActions": [
        {
          "type": "button",
          "icon": "fa fa-edit",
          "label": "修改",
          "actionType": "link",
          "link": "/application/document/edit/${id}"
        },
        {
          "label": "删除",
          "icon": "fa fa-trash text-danger",
          "type": "button",
          "actionType": "ajax",
          "confirmText": "确认要删除文档《${title}》？",
          "api": "post:./document.api?_act=delete&id=${id}"
        }
      ],
      "#bulkActions": [
        {
          "label": "批量删除",
          "icon": "fa fa-trash text-danger",
          "type": "button",
          "actionType": "ajax",
          "confirmText": "确认要删除文档 ${ids} ？",
          "api": "post:./document.api?_act=batch-delete&ids=${ids}"
        }
      ],
      "headerToolbar": [
        {
          "label": "新增",
          "type": "button",
          "icon": "fa fa-plus",
          "level": "info",
          "actionType": "link",
          "link": "/application/document/new",
          "disabled": false
        },
        "bulkActions",
        "."
      ],
      "columns": [
        {
          "name": "id",
          "hidden": true
        },
        {
          "name": "title",
          "label": "标题",
          "width": 100
        },
        {
          "name": "note",
          "label": "说明",
          "type": "tpl",
          "tpl": "${note|truncate:20}"
        },
        {
          "name": "format",
          "label": "格式"
        },
        {
          "name": "permission",
          "label": "权限",
          "type": "mapping",
          "map": {
            "public": "公开（public）",
            "protected": "保护（protected）",
            "private": "私有（private）",
            "*": "未知（${permission}）"
          }
        },
        {
          "name": "status",
          "label": "状态",
          "type": "mapping",
          "map": {
            "0": "<span class='label label-success'>有效</span>",
            "1": "<span class='label label-light'>禁用</span>",
            "*": "<span class='label label-danger'>未知status:{status}</span>"
          }
        },
        {
          "name": "gmt_modified",
          "label": "修改时间",
          "type": "date",
          "format": "YYYY-MM-DD HH:mm:ss",
          "width": 120
        }
      ]
    }
  ]
}