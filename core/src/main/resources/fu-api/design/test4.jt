{
  "$res": {
    "@func": "apijson",
    "datasource": "default",
    "method": "get",
    "request": {
      "[]": {
        "API_FILTER": {
          "@column": "id,parent_type,parent_id,title,implement_type,point,status,gmt_create,gmt_modified",
          "@order": "sort"
        },
        "query": 2
      },
      "total@": "/[]/total",
      "info@": "/[]/info"
    }
  },

  "*": {
    "@func": "@if",
    "select": "@{ attr.res.code == 200 }",
    "true":{
      "data": {
        "rows": "@(attr.'res'.'[]'.'API_FILTER');",
        "total": "@(attr.res.total);",
        "info": "@(attr.res.info);"
      },
      "msg": "@(attr.res.msg);",
      "status": 0
    },
    "false": {
      "status": "@(attr.res.code);",
      "msg": "@(attr.res.msg);"
    }
  }

}